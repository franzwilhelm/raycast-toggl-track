{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "toggl-track",
  "title": "Toggl Track",
  "description": "Start and stop time entries with Toggl Track",
  "icon": "command-icon.png",
  "author": "franzwilhelm",
  "license": "MIT",
  "owner": "franzwilhelm",
  "contributors": [
    "franzwilhelm",
    "ThatNerdSquared"
  ],
  "commands": [
    {
      "name": "index",
      "title": "Toggl Track",
      "description": "Start and stop time entries with Toggl Track",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "togglApiToken",
      "type": "textfield",
      "required": true,
      "title": "Toggl API Token",
      "description": "The API token for your Toggl account."
    }
  ],
  "keywords": [
    "toggl",
    "track",
    "time",
    "entry"
  ],
  "dependencies": {
    "@raycast/api": "^1.27.0",
    "dayjs": "^1.10.7",
    "node-fetch": "^3.1.1"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
